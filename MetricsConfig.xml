<?xml version="1.0" encoding="UTF-8" ?>
<MetricsConfig> 
  <ResourceName>Netflix</ResourceName>                <!--Resource name displayed on LM platform-->
  <ApplicationName>NetflixServer</ApplicationName>    <!--Resource group name displayed on LM platform-->
  <MetricsInterval>60</MetricsInterval>
  <MetricsBatchInterval>60</MetricsBatchInterval>

  <Counters>
    <key>Microsoft.AspNetCore.Hosting</key>           <!--Datasource and datasource instance name displayed on LM platform-->
      <value>Total Requests</value>                   <!--Datapoint for above datasource -->
      <value>Failed Requests</value>
      <value>Request Rate</value>
  </Counters>
    <Counters>
    <key>System.Runtime</key>
      <value>Gen 0 Size</value>
      <value>Allocation Rate</value>
      <value>Exception Count</value>
      <value>GC Heap Size</value>
      <value>CPU Usage</value>
      <value>Working Set</value>
  </Counters>
  <Counters>
      <key>System.Net.Sockets</key>
      <value>Bytes Received</value>
      <value>Bytes Sent</value>
      <value>Datagrams Received</value>
      <value>Datagrams Sent</value>
  </Counters>
</MetricsConfig>


